---
to: src/redux/<%= h.changeCase.lcFirst(name) %>/<%= h.changeCase.lcFirst(name) %>.actions.js
---
<% const nameLower = h.changeCase.lcFirst(name) -%>
const NAME_SPACE = '<%=nameLower %>';

export const actionsType = {
<% if(!locals.example) { -%>
  //SOME_ACTION: `${NAME_SPACE}/SOME_ACTION`,
<%}-%>
<% if(locals.example) { -%>
  INCREMENT: `${NAME_SPACE}/INCREMENT`,
  DECREMENT: `${NAME_SPACE}/DECREMENT`,
<%}-%>
};

<% if(locals.example) { -%>
export const increment = (payload) => ({
  type: actionsType.INCREMENT,
  payload,
});

export const decrement = (payload) => ({
  type: actionsType.DECREMENT,
  payload,
});
<%}-%>